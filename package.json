{
  "name": "anisync",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node app.js"
  },
  "author": "Yurifag",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^0.8.5",
    "body-parser": "^1.15.0",
    "compression": "^1.6.1",
    "connect-mongo": "^1.1.0",
    "express": "^4.13.4",
    "express-minify": "^0.2.0",
    "express-session": "^1.13.0",
    "jade": "^1.11.0",
    "jstransformer-marked": "^1.0.1",
    "linkify-it": "^1.2.0",
    "marked": "^0.3.5",
    "mongoose": "^4.4.4",
    "shortid": "^2.2.4",
    "socket.io": "^1.4.5",
    "stylus": "^0.53.0",
    "tlds": "^1.96.0",
    "youtube-dl": "^1.10.5"
  },
  "devDependencies": {
    "morgan": "^1.7.0"
  },
  "description": "AniSync - a service to synchronize media playback between browsers.",
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "mongo": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ]
    },
    "globals": {
      "socket": true,
      "init": true,
      "React": true,
      "ReactDOM": true,
      "io": true,
      "SortableMixin": true,
      "videojs": true
    },
    "plugins": [
      "react",
      "react-native"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
      "react-native/no-unused-styles": "error",
      "react-native/split-platform-components": "error",
      "react-native/no-inline-styles": "error",
      "react-native/no-color-literals": "error",
      "no-console": "off"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    }
  }
}
