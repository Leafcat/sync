.vjs-big-play-button
  display none !important

#channel-name-input
  color #ffffff
  margin-top 5px
  padding-left 5px
  width 100%
  font-size 25px
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
  background transparent
  border none
  &:focus
    background-color rgba(0, 0, 0, 0.3)

#nowPlaying
  display flex
  padding-left 5px
  margin-bottom 5px
  height 19px
  overflow hidden
  white-space nowrap
  text-overflow ellipsis

#nowPlaying .title
  padding-right 5px
  border-right 1px solid #ffffff

#nowPlaying .pretext
  color #bbbbbb

#nowPlaying .icon
  margin-left 10px
  &:hover
    color #ad85ff

#channel
  display flex
  flex-wrap wrap
  
#video-app
  order 1
  width 70%
  
#chat-app
  order 2
  width 30%
  
#playlist-app
  order 3
  width 70%
  
#users-app
  order 4
  width 30%
  padding-left 10px

@media all and (max-width: 900px), all and (orientation: portrait)
  #content
    padding 0 10px 80px
  
  #video-app
    order 1
    width 100%
  
  #chat-app
    order 3
    height 400px
    width 100%
    
  #playlist-app
    order 2
    width 100%
    
  #users-app
    order 4
    width 100%
